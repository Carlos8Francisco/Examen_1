<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu3"
    android:background="#DFC254">

    <TextView
        android:id="@+id/p1t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logo"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="30dp"
        android:background="#C1E4AF46"
        android:textColor="#EA2727"
        />

    <ImageView
        android:id="@+id/im1"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_margin="13dp"
        android:src="@drawable/pzza"/>

    <LinearLayout
        android:id="@+id/lir1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mn3"
            android:fontFamily="sans-serif-black"
            android:textColor="#EA2727"
            android:textSize="50dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lir1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im2"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_margin="13dp"
                android:src="@drawable/cerv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo: $50 "
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- beer"
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lir1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_margin="13dp"
                android:src="@drawable/a7up"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo: $30 "
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 7Up"
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lir1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im4"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_margin="13dp"
                android:src="@drawable/coca"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo: $10 "
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- CocaCola"
                android:fontFamily="sans-serif-black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lir1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="35dp"
                android:text="Beer"/>

            <CheckBox
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="35dp"
                android:text="7up"/>

            <CheckBox
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="35dp"
                android:text="CocaCola"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lir1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Pizzas" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar" />

        </LinearLayout>






    </LinearLayout>




</RelativeLayout>